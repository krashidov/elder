<!DOCTYPE html>
<html>

<head>
  <title>Elder</title>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <nav class="navbar navbar-toggleable-lg navbar-inverse bg-primary bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item <%= current_page?(dashboard_path) ? 'active' : '' %>">
          <%= link_to "Home", dashboard_path, {class: "nav-link"} %>
          <!--<a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>-->
        </li>
        <li class="nav-item  <%= current_page?(providers_path) ? 'active' : '' %>">
          <%= link_to "Providers", providers_path, {class: "nav-link"} %>
        </li>
        <li class="nav-item  <%= current_page?(clients_path) ? 'active' : '' %>">
          <%= link_to "Clients", clients_path, {class: "nav-link"} %>
        </li>
        <li class="nav-item  <%= current_page?(careplans_path) ? 'active' : '' %>">
          <%= link_to "Careplans", careplans_path, {class: "nav-link"} %>
        </li>
      </ul>
    </div>
  </nav>

  <div class="container-fluid">
    <%= yield %>
  </div>
</body>

</html>