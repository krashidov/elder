<%= simple_form_for(provider, wrapper: :horizontal_form) do |f| %>
  <% if provider.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(provider.errors.count, "error") %> prohibited this provider from being saved:</h2>

      <ul>
      <% provider.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.input :last_name %>
  <%= f.input :first_name %>
  <%= f.input :ssi %>
  <%= f.input :phone_number %>
  <%= f.input :address %>
  <%= f.input :city %>
  <%= f.input :state %>
  <%= f.input :postal_code %>
  <%= f.input :hours_plus_travel %>
  <%= f.input :date_of_birth, input_html: { type: 'date' } %>
  <%= f.input :emergency_contact_info %>
  <%= f.input :units, default: 0 %>
  <%= f.input :staff_evaluation_date %>
  <%= f.input :safety_training_date %>
  <%= f.input :supervisor %>
  <%= f.input :language %>
  <%= f.input :id_expiration_date %>
  <%= f.input :work_authorization_expiration %>
  <%= f.input :active, default: true %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
